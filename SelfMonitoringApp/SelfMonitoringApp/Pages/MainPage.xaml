<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:controls="clr-namespace:SelfMonitoringApp.Controls"
             x:Class="SelfMonitoringApp.Pages.MainPage"
             Visual="Material"
             NavigationPage.HasNavigationBar="False">
    <controls:PageBackgroundWithHeader HeaderText="Home">
            <Grid BackgroundColor="{StaticResource PrimaryLight}" Margin="5" MinimumHeightRequest="400">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
            </Grid.RowDefinitions>
                <Button Style="{StaticResource ButtonStyle}" Command="{Binding NavigateCommand}" 
                    CommandParameter="mood" Text="Log Mood"/>
                <Button Grid.Row="1" Style="{StaticResource ButtonStyle}" Command="{Binding NavigateCommand}" 
                   CommandParameter="meal"  Text="Log Meal"/>
                <Button Grid.Row="2" Style="{StaticResource ButtonStyle}" Command="{Binding NavigateCommand}"
                    CommandParameter="sleep" Text="Log Sleep"/>
                <Button Grid.Row="3" Style="{StaticResource ButtonStyle}"
                    CommandParameter="substance"  Text="Log Substance Use"/>
                <Button Grid.Row="4" Text="View Logs" Style="{StaticResource ButtonStyle}"/>
                <Button Text="Settings" Grid.Row="5" Style="{StaticResource ButtonStyle}"/>
            </Grid>

        </controls:PageBackgroundWithHeader>
</ContentPage>
