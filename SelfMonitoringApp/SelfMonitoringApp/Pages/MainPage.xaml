<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:controls="clr-namespace:SelfMonitoringApp.Controls"
             xmlns:pages="clr-namespace:SelfMonitoringApp.Pages"
             x:Class="SelfMonitoringApp.Pages.MainPage"
             Visual="Material" 
             Title="Home"
             NavigationPage.HasNavigationBar="True" >
    <ScrollView>
        <Grid  Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <!--Log creation block-->
            <controls:HeaderBlock HeaderText="Create a log">
                <Grid>
                    <!--Mood Log Button-->
                    <ImageButton Command="{Binding NavigateCommand}" CommandParameter="{x:Static pages:PageNames.MoodEditor}" 
                            Padding="5" BackgroundColor="{StaticResource Secondary}" BorderColor="White" BorderWidth="1"  Source="twotone_psychology_black_48dp.png"/>

                    <!--Socialization Log Button-->
                    <ImageButton Command="{Binding NavigateCommand}" CommandParameter="{x:Static pages:PageNames.SocializationEditor}"
                            Padding="5" BackgroundColor="{StaticResource Secondary}" BorderColor="White" BorderWidth="1" Grid.Column="1" Source="baseline_groups_black_48dp.png"/>

                    <!--Meal Log Button-->
                    <ImageButton Command="{Binding NavigateCommand}" CommandParameter="{x:Static pages:PageNames.MealEditor}" 
                            Grid.Column="1" Grid.Row="1" Padding="5" BackgroundColor="{StaticResource Secondary}" BorderColor="White" BorderWidth="1"  Source="twotone_restaurant_menu_black_48dp.png"/>

                    <!--Sleep Log Button-->
                    <ImageButton Command="{Binding NavigateCommand}" CommandParameter="{x:Static pages:PageNames.SleepEditor}" 
                           Padding="5" BackgroundColor="{StaticResource Secondary}" BorderColor="White" BorderWidth="1"  Grid.Row="1" Source="twotone_hotel_black_48dp.png"/>

                    <!--Activity Log Button-->
                    <ImageButton Command="{Binding NavigateCommand}"  CommandParameter="{x:Static pages:PageNames.ActivityEditor}" 
                            Grid.Row="2" Padding="5" BackgroundColor="{StaticResource Secondary}" BorderColor="White" BorderWidth="1" Source="twotone_nature_people_black_48dp.png"/>
                    
                    <!--Substance Log Button-->
                    <ImageButton  Command="{Binding NavigateCommand}" CommandParameter="{x:Static pages:PageNames.SubstanceEditor}" 
                            Grid.Row="2" Padding="5" BackgroundColor="{StaticResource Secondary}" BorderColor="White" BorderWidth="1"  Grid.Column="1" Source="twotone_local_bar_black_48dp.png" />
                </Grid>
            </controls:HeaderBlock>

            <!--Features block-->
            <controls:HeaderBlock Grid.Row="1" HeaderText="Features" Margin="0,0,0,7">
                <Grid>
                    <Button Grid.Row="0" Style="{StaticResource ButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="{x:Static pages:PageNames.RawLogViewer}"
                            Margin="3" Text="View Logs" ImageSource="twotone_menu_book_black_48dp.png" HeightRequest="20"/>

                    <Button Grid.Row="1" Style="{StaticResource ButtonStyle}"  ImageSource="twotone_multiline_chart_black_48dp.png"
                             Margin="3" IsEnabled="False" Text="Trends [Coming Soon]" HeightRequest="20"/>

                    <Button Grid.Row="2" Style="{StaticResource ButtonStyle}" ImageSource="twotone_flag_black_48dp.png"
                            CommandParameter="data" Margin="3" IsEnabled="False"  Text="Goals [Coming Soon]" HeightRequest="20"/>

                    <Button Grid.Row="3" Style="{StaticResource ButtonStyle}"
                            ImageSource="twotone_notifications_black_48dp.png" HeightRequest="20" Margin="3" IsEnabled="False" Text="Notifications [Coming soon]"/>

                    <Button Grid.Row="4" Style="{StaticResource ButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="{x:Static pages:PageNames.Settings}"
                            Text="Settings" ImageSource="twotone_settings_black_48dp.png" Margin="3" HeightRequest="20"/>
                </Grid>
            </controls:HeaderBlock>
       
        </Grid>
    </ScrollView>
</ContentPage>
